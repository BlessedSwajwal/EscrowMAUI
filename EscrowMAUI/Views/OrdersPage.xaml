<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EscrowMAUI.Views.OrdersPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:EscrowMAUI.Models"
    xmlns:vm="clr-namespace:EscrowMAUI.ViewModel"
    Title="All Orders"
    Padding="10"
    x:DataType="vm:OrdersViewModel"
    Background="{StaticResource BackgroundColor}">
    <ScrollView>
        <VerticalStackLayout>
            <Label
                FontSize="40"
                HorizontalOptions="Center"
                Text="All Orders"
                VerticalOptions="Center" />
            <CollectionView ItemsSource="{Binding Orders}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Order">
                        <Border
                            Padding="10"
                            BackgroundColor="{StaticResource MidnightBlue}"
                            StrokeShape="RoundRectangle 20"
                            StrokeThickness="2">

                            <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                                <VerticalStackLayout.Resources>
                                    <Style TargetType="Label">
                                        <Setter Property="TextColor" Value="White" />
                                        <Setter Property="FontSize" Value="15" />
                                        <Setter Property="LineHeight" Value="1.2" />
                                    </Style>
                                </VerticalStackLayout.Resources>
                                <Label
                                    FontSize="25"
                                    HorizontalOptions="Center"
                                    Text="{Binding Name}"
                                    TextColor="White" />

                                <!--  Description  -->
                                <VerticalStackLayout>
                                    <Label Text="Description: " TextColor="White" />
                                    <BoxView BackgroundColor="Transparent" HeightRequest="10" />
                                    <Label
                                        Padding="40,0,0,0"
                                        Text="{Binding Description}"
                                        TextColor="White" />

                                </VerticalStackLayout>

                                <!--  Order Status  -->
                                <HorizontalStackLayout>
                                    <Label
                                        Margin="0,0,10,0"
                                        Text="Order Status: "
                                        TextColor="White" />
                                    <Label Text="{Binding OrderStatus}" />

                                </HorizontalStackLayout>

                                <!--  Allowed Days  -->
                                <HorizontalStackLayout>
                                    <Label Margin="0,0,10,0" Text="Allowed Days: " />
                                    <Label Text="{Binding AllowedDays}" />

                                </HorizontalStackLayout>
                                <HorizontalStackLayout>
                                    <Label Margin="0,0,10,0" Text="Bids Count: " />
                                    <Label Text="{Binding BidsCount}" />

                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>